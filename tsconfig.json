{
	"compilerOptions": {
		"declaration": false,
		"experimentalDecorators": true,
		"jsx": "react",
		"jsxFactory": "h",
		"lib": ["dom", "es2018"],
		"module": "commonjs",
		"noImplicitAny": true,
		"noImplicitReturns": false,
		"noImplicitThis": true,
		"outDir": "./extension/dist",
		"removeComments": true,
		"sourceMap": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"target": "es5",
		"types": ["chrome"]
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"]
}
